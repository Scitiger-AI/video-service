# 应用信息
APP_NAME=video-service
API_V1_STR=/api/v1

# MongoDB配置
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB_NAME=video_service
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_DB_NAME=admin

# Redis配置（用于Celery）
REDIS_URL=redis://localhost:6379/0

# Celery配置
# 如果未设置，将使用Redis和MongoDB URL
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=

# 是否启用认证
ENABLE_AUTH=False
# SciTigerCore认证服务配置
AUTH_SERVICE_URL=http://localhost:8000
VERIFY_TOKEN_URL=/api/platform/auth/microservice/verify-token/
VERIFY_API_KEY_URL=/api/platform/auth/microservice/verify-api-key/
# 服务名称（用于权限检查）
SERVICE_NAME=video-service

# 日志配置
LOG_LEVEL=INFO

# 模型配置
DEFAULT_MODEL=wanx2.1-t2v-turbo
DEFAULT_PROVIDER=aliyun

# 任务配置
TASK_TIME_LIMIT=3600

# 阿里云配置
ALIYUN_API_KEY=your_aliyun_api_key_here
ALIYUN_API_URL=https://dashscope.aliyuncs.com/api/v1/services/aigc/video-generation/video-synthesis
ALIYUN_SUPPORTED_MODELS=wanx2.1-t2v-turbo,wanx2.1-t2v-plus,wanx2.1-i2v-turbo,wanx2.1-i2v-plus,wanx2.1-kf2v-plus

# 智谱AI配置
ZHIPUAI_API_KEY=your_zhipuai_api_key_here
ZHIPUAI_SUPPORTED_MODELS=cogvideox-2,cogvideox-flash,viduq1-text,viduq1-image,viduq1-start-end,vidu2-image,vidu2-start-end,vidu2-reference